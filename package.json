{
  "name": "ddd-boilerplate",
  "version": "1.0.0",
  "description": "Domain-Driven Design and Clean Architecture boilerplate for TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "validate:architecture": "node scripts/validate-architecture.js",
    "validate:layers": "node scripts/validate-architecture.js",
    "clean": "rimraf dist",
    "test:claude-flow": "jest --selectProjects claude-flow-integration",
    "ubiquitous-language:extract": "node scripts/extract-ubiquitous-language.js",
    "performance:report": "node scripts/performance-report.js",
    "performance:dashboard": "node scripts/performance-report.js --format html --output dashboard.html && open dashboard.html",
    "spec:dashboard": "npx @pimzino/spec-workflow-mcp@latest --dashboard",
    "spec:verify": "./scripts/verify-spec-workflow-setup.sh",
    "measure:agents": "./scripts/measure-agent-invocation.sh",
    "docker:build": "docker build -f Dockerfile.test -t ddd-boilerplate-test .",
    "docker:test": "docker-compose -f docker-compose.test.yml run --rm test-runner && docker-compose -f docker-compose.test.yml run --rm integration-test",
    "docker:test:unit": "docker-compose -f docker-compose.test.yml run --rm test-runner",
    "docker:test:integration": "docker-compose -f docker-compose.test.yml run --rm integration-test",
    "docker:clean": "docker-compose -f docker-compose.test.yml down -v --remove-orphans || true",
    "docker:check": "./scripts/docker-problem-detector.sh",
    "report:latest": "node scripts/view-report.js",
    "report:history": "ls -1 reports/*.json 2>/dev/null || echo 'no reports'",
    "prepare": "husky || true",
    "pre-commit": "lint-staged && npm run typecheck && npm run validate:layers",
    "pre-commit:install": "husky install && npx husky add .husky/pre-commit 'npm run pre-commit' && npx husky add .husky/commit-msg 'npx --no -- commitlint --edit ${1}'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "setup": "./scripts/setup-dev-tools.sh",
    "ci:local": "just ci",
    "ci:check": "just check",
    "docker:api-test": "docker-compose -f docker-compose.test.yml run --rm api-test",
    "docker:lint": "docker-compose -f docker-compose.test.yml run --rm lint-runner",
    "docker:typecheck": "docker-compose -f docker-compose.test.yml run --rm typecheck-runner",
    "gh-actions:local": "act --container-architecture linux/amd64"
  },
  "keywords": [
    "ddd",
    "domain-driven-design",
    "clean-architecture",
    "typescript",
    "hexagonal-architecture"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "agentdb": "^1.3.9",
    "claude-flow": "^2.7.0-alpha.10",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
