# Claude Code Configuration
# Claude Code の動作を最適化するための環境変数
# このファイルを .env にコピーして使用してください: cp .env.example .env

# Claude Code 出力トークン制限の引き上げ
# デフォルト: 4096 → 長い応答でエラーが発生する場合に増加
# 注意: トークン数を増やすと、API コストが増加する可能性があります
CLAUDE_CODE_MAX_OUTPUT_TOKENS=16384

# Node.js Environment
NODE_ENV=development

# Database (テスト環境用)
# Docker Compose で使用されるテストデータベース設定
DATABASE_URL=postgres://test:test@localhost:5432/testdb

# API Configuration (開発環境用)
PORT=3000
API_BASE_URL=http://localhost:3000

# Claude Flow / Swarm Configuration
# Claude Flow のメモリとSwarm設定
CLAUDE_FLOW_MEMORY_NAMESPACE=architecture
CLAUDE_FLOW_REASONING_BANK_ENABLED=true

# Spec Workflow Configuration
# spec-workflow-mcp の設定パス
SPEC_WORKFLOW_SPECS_PATH=.spec-workflow/specs
SPEC_WORKFLOW_APPROVALS_PATH=.spec-workflow/approvals

# GitHub Actions (ローカルテスト用)
# act を使用してGitHub Actionsをローカルで実行する場合
ACT_SECRET_ANTHROPIC_API_KEY=your-api-key-here
