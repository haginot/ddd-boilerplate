{
  "name": "ddd-spec-workflow-flow",
  "version": "3.0.0",
  "description": "Integrated DDD Architecture + spec-workflow-mcp workflow",
  "claudeFlow": {
    "memory": {
      "defaultNamespace": "architecture",
      "namespaces": [
        "domain",
        "application",
        "infrastructure",
        "interface",
        "architecture",
        "specs"
      ],
      "reasoningBank": {
        "enabled": true,
        "storage": ".swarm/memory.db"
      },
      "agentdb": {
        "enabled": true,
        "vectorSearch": {
          "k": 5,
          "threshold": 0.7
        }
      }
    },
    "swarm": {
      "patternsDir": ".swarm/patterns",
      "sessionsDir": ".swarm/sessions",
      "logsDir": ".swarm/logs"
    }
  },
  "triggers": {
    "on_spec_created": {
      "description": "Triggered when a new specification is created",
      "actions": [
        "validate_spec_against_architecture",
        "check_layer_assignment"
      ]
    },
    "on_task_started": {
      "description": "Triggered when a task status changes to in-progress",
      "actions": [
        "load_relevant_context"
      ]
    },
    "on_task_completed": {
      "description": "Triggered when a task is marked as completed",
      "actions": [
        "run_architecture_validation",
        "run_tests"
      ]
    },
    "on_spec_approved": {
      "description": "Triggered when a specification is approved",
      "actions": [
        "validate_architecture",
        "prepare_implementation"
      ]
    }
  },
  "integrations": {
    "spec-workflow": {
      "enabled": true,
      "auto_validate": true,
      "architecture_check": true,
      "specs_path": ".spec-workflow/specs/",
      "approvals_path": ".spec-workflow/approvals/"
    }
  },
  "workflows": {
    "spec_implementation": {
      "description": "Standard workflow for implementing a specification following DDD principles",
      "steps": [
        "parse_spec_requirements",
        "identify_affected_layers",
        "implement_domain_logic",
        "implement_application_logic",
        "implement_infrastructure",
        "implement_interface",
        "validate_architecture",
        "run_tests",
        "update_spec_status"
      ]
    }
  }
}
