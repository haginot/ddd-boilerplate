{
  "enableAllProjectMcpServers": true,
  "sandbox": {
    "allowUnsandboxedCommands": false,
    "excludedCommands": ["docker", "docker-compose"],
    "allowUnixSockets": false
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-layer-dependencies.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-naming-conventions.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-domain-events.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "npx claude-flow@alpha validate-architecture --strict",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
