{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-layer-dependencies.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-naming-conventions.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-domain-events.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "npx claude-flow@alpha validate-architecture --strict",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "/.claude/hooks/docker_lint_and_test.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "on_task_status_change": [
      {
        "type": "command",
        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/task-architecture-validator.sh",
        "timeout": 60
      }
    ],
    "pre_commit": [
      {
        "type": "command",
        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-layer-dependencies.sh",
        "timeout": 30
      },
      {
        "type": "command",
        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/task-architecture-validator.sh",
        "timeout": 60
      },
      {
        "type": "command",
        "command": "/.claude/hooks/docker_test.sh",
        "timeout": 120
      }
    ]
  }
}
